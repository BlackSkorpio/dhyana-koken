<!DOCTYPE html>
<koken:include file="inc/header.html" />
<koken:asset file="css/album.css" />
<koken:load>
    <koken:pulse group="header" id="slide" jsvar="pulse" crop="fill" size="21:9"/>
    <div class="container medium-text-justify">
		<h2>{{ album.title }}</h2>
		{{ album.description paragraphs="true" }} 
		<koken:tags>
			<p style="float: right">
				<strong>{{ labels.tag.plural }}:</strong> 
				<koken:loop separator=" ">
					<koken:link class="label">
						#{{ tag.title }} 
					</koken:link>
				</koken:loop>
			</p>
		</koken:tags>
		<koken:categories>
			<p>
				<strong>{{ labels.category.plural }}:</strong> 
				<koken:loop separator=" ">
					<koken:link class="label">
						{{ category.title }} 
					</koken:link>
				</koken:loop>
			</p>
		</koken:categories>
		<p>
			<koken:link to="archive">
				<koken:time />
			</koken:link>
		 </p>
	</div>
	<div id="kgrid">
		<koken:loop>
        	<div class="kgrid_item">
				<koken:link>
					<koken:img preset="medium" lazy="true" />
				</koken:link>
        	</div>
      	</koken:loop>
    </div>
	<koken:else>
  		<koken:note>
    		No album data found 
  		</koken:note>
	</koken:load>
<koken:include file="inc/footer.html" />
<!-- Scripts -->    
<koken:asset file="js/theme.js" />
<koken:asset file="js/vendor/foundation.js"/>

<script>
    $(document).ready(function() {
        $(function() {
            $('#kgrid').pillar({
                items: '.kgrid_item'
            });
        });
    });
</script>