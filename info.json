{
	"name": "Dhyana",
	"version": "1.0",
	"description": "Minimal, zen theme built with Foundation framework",
	"demo": "https://onyx.codes",
	"author": {
		"name": "Onyx",
		"link": "https://onyx.codes"
	},
	"navigation_groups": {
		"footer": {
			"label": "Footer",
			"defaults": [
				"front",
				"albums",
				"categories",
				"tags",
				"contents"
			]
		}
	},
	"settings": {
		"Style": {
			"icon": "style",
			"settings": {
				"accent": {
					"label": "Accent color",
					"type": "color",
					"value": "#1779ba",
					"note": "Affects text and elements highlights",
					"note_align": "left"
				},
				"title_font": {
					"label": "Uppercase font",
					"type": "boolean",
					"values": {
						"true": "small-caps",
						"false": "normal"
					},
					"value": "small-caps",
					"note": "Makes nav text in small caps",
					"note_align": "left"
				},
				"theme_style": {
					"label": "Theme",
					"type": "color",
					"value": "#212121",
					"note": "Affects the background of header and footer",
					"note_align": "left"
				},
				"theme_text_style": {
					"label": "Text color",
					"type": "color",
					"value": "#FFFFFF",
					"note": "Affects the text color of header and footer",
					"note_align": "left"
				}
			}
		},
		"Layout": {
			"icon": "layout",
			"settings": {
				"show_logo": {
					"label": "Use logo",
					"type": "boolean",
					"value": true,
					"note": "Choose wether to show a logo rather than a title",
					"note_align": "left"
				},
				"logo_src": {
					"label": "Logo's source",
					"type": "string",
					"value": "storage/themes/dhyana-koken/logo.png",
					"note": "Enter the url for your logo",
					"note_align": "left",
					"dependencies": {
						"evaluate": "all",
						"conditions": [
							{
								"option": "show_logo",
								"equals": true
							}
						]
					}
				}
			}
		},
		"Language": {
			"icon": "info",
			"settings": {
				"language": {
					"label": "Language",
					"type": "select",
					"options": [
						{
							"label": "English",
							"value": "en"
						},
						{
							"label": "French",
							"value": "fr"
						},
						{
							"label": "German",
							"value": "de"
						},
						{
							"label": "Italian",
							"value": "it"
						},
						{	"label": "Japanese",
							"value": "ja"
						}
					],
					"value": "en"
				}
			}
		},
		"SEO & urls": {
			"icon": "layout",
			"settings": {
				"cover_image": {
					"label": "Cover image url",
					"type": "string",
					"value": "https://i.imgur.com/ckfh5jH.png"
				},
				"instagram": {
					"label": "Instagram",
					"type": "string",
					"value": "gandalfx_",
					"note": "Enter you instagram username",
					"note_align": "left"
				},
				"linkedin": {
					"label": "LinkedIn",
					"type": "string",
					"value": "linkedin.com/in/ganda1fx",
					"note": "Enter you LinkedIn profile link",
					"note_align": "left"
				}
			}
		}
	}
}